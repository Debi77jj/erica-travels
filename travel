<script>
    const travelData = [
        {name: "Paris Getaway", type: "package", price: "$1200", image: "https://images.unsplash.com/photo-1502602898657-3e91760cbb34", rating: 4.8},
        {name: "New York Hotel", type: "hotel", price: "$300", image: "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267", rating: 4.5},
        {name: "Tokyo Flight", type: "flight", price: "$900", image: "https://images.unsplash.com/photo-1549924231-f129b911e442", rating: 4.7},
        {name: "Maldives Package", type: "package", price: "$2500", image: "https://images.unsplash.com/photo-1507525428034-b723cf961d3e", rating: 4.9},
    ];

    function searchTravel() {
        const destination = document.getElementById('destination').value.toLowerCase();
        const type = document.getElementById('type').value;
        const listings = document.getElementById('listings');
        listings.innerHTML = '';

        const results = travelData.filter(item => 
            item.type === type && item.name.toLowerCase().includes(destination)
        );

        if(results.length === 0){
            listings.innerHTML = "<p>No results found.</p>";
            return;
        }

        results.forEach(item => {
            const div = document.createElement('div');
            div.className = 'listing';
            div.innerHTML = `
                <img src="${item.image}" alt="${item.name}">
                <h3>${item.name}</h3>
                <p>Price: ${item.price}</p>
                <p>Rating: ${item.rating}</p>
                <button onclick="alert('Booked ${item.name}!')">Book Now</button>
            `;
            listings.appendChild(div);
        });
    }
</script>

